<!DOCTYPE html>
<html lang="en">

<head>
    {{> head defaultPageTitle='Home'}}
</head>

<body data-theme="dark" data-layout="fluid" data-sidebar-position="left" data-sidebar-behavior="sticky"
	 class="{{#with (or page.attributes.role page.role)}} {{{this}}} {{/with}}">

	<div class="wrapper">
		{{> sidebar}}

		<div class="main">
			{{> top-nav}}

			<main class="content">
				<div class="container-fluid p-0">

					<div class="container p-0">

						<div class="row">
							{{> breadcrumbs}}
						</div>

						<div class="row">
							<!-- ===== PAGE TITLE ===== -->
							<div class="mx-auto col-lg-10 col-xl-8 mb-1">
                                {{#with page.title}}
                                	<h1 class="h3 mb-3">{{{this}}}</h1>
                                {{/with}}
							</div>

							<div class="mx-auto col-lg-10 col-xl-8 mb-5">
								{{> toc}}
                                {{> buttons}}
							</div>
							<!-- ===== PAGE TITLE ===== -->
						</div>

						<div class="row">
							<!-- ===== ARTICLE CONTENT ===== -->
							<div class="mx-auto col-lg-10 col-xl-8 mb-3">
								{{> article}}
							</div>
							<!-- ===== ARTICLE CONTENT ===== -->
						</div>

						{{#if (eq page.layout 'homepage')}}
							<div class="row">
								<!-- ===== PROJECTS ===== -->
								<div class="mx-auto col-lg-10 col-xl-8 mb-3">
									<div class="card">
										<div class="card-header">
											<h2 class="card-title mb-0">All Projects and Versions</h2>
										</div>
										<div class="card-body">
											<p class="card-text">Switch to another project or to another version of a project. Other versions are either git branches or tagged versions.</p>
										</div>
										<table class="table">
											<thead>
												<tr>
													<th>Project</th>
													<th class="align-right">Version / Branch</th>
												</tr>
											</thead>
											<tbody>
												{{#each site.components}}
													<tr>
														<td><a href="{{{relativize ./url}}}">{{{./title}}}</a></td>
														<td class="align-right">
															{{#each ./versions}}
																<a href="{{{relativize ./url}}}" class="btn btn-outline-secondary btn-sm mb-1"><i class="align-middle" data-feather="git-pull-request"></i> {{./displayVersion}}</a>
															{{/each}}
														</td>
													</tr>
												{{/each}}
											</tbody>
										</table>
									</div>
								</div>
								<!-- ===== PROJECTS ===== -->
							</div>
						{{/if}}

					</div>

				</div>
			</main>

			{{> footer}}
		</div>
	</div>

	{{> scripts}}

	{{!-- <script src="https://cdnjs.cloudflare.com/ajax/libs/highlight.js/9.12.0/highlight.min.js"></script> --}}
	<script src="{{{uiRootPath}}}/js/vendor/highlight.js"></script>
	<script>
		document.addEventListener("DOMContentLoaded", function() {
			$("pre code").each(function(i, block) {
				hljs.highlightBlock(block);
			});
		});
	</script>
</body>
</html>
