<div class="mx-auto col-lg-10 col-xl-8 mb-3">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            {{!-- {{#if (eq page.layout 'default')}} --}}
                <li class="breadcrumb-item"><a href="/docs">Documentation</a></li>
            {{!-- {{/if}} --}}

            {{#if page.breadcrumbs}}
                {{#with page.componentVersion}}
                    {{#if (and ./title (ne ./title @root.page.breadcrumbs.0.content))}}
                        <li class="breadcrumb-item"><a href="{{{relativize ./url}}}">{{{./title}}}</a></li>
                    {{/if}}
                {{/with}}

                {{#each page.breadcrumbs}}
                    <li class="breadcrumb-item">
                        {{~#if (and ./url (eq ./urlType 'internal'))~}}
                            <a href="{{{relativize ./url}}}">{{{./content}}}</a>
                        {{~else~}}
                            {{{./content}}}
                        {{~/if~}}
                    </li>
                {{/each}}
            {{/if}}
        </ol>
    </nav>
</div>
