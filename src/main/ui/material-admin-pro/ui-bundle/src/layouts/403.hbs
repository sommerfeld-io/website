<!DOCTYPE html>
<html lang="en">
    <head>
        {{> head defaultPageTitle='403 Forbidden'}}
    </head>
    <body>
        <!-- Layout wrapper-->
        <div id="layoutError">
            <!-- Layout content-->
            <div id="layoutError_content">
                <!-- Main page content-->
                <main>
                    <div class="container">
                        <div class="row justify-content-center">
                            <div class="col-lg-6">
                                <!-- Error message content-->
                                <div class="text-center my-5 mt-sm-10">
                                    <img class="img-fluid mb-4" src="{{{uiRootPath}}}/img/illustrations/error-403.svg" alt="403 Error Image by Freepik Storyset" style="max-width: 30rem" />
                                    <p class="lead">You don't have permission to access this resource.</p>
                                    <a class="btn btn-outline-primary" href="/">
                                        <i class="material-icons leading-icon">arrow_back</i>
                                        Home
                                    </a>
                                    <a class="btn btn-primary" href="#" data-bs-toggle="modal" data-bs-target="#projectsModal">
                                        <i class="material-icons leading-icon">picture_in_picture</i>
                                        Choose a Project
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </main>
            </div>
            <!-- Layout footer-->
            <div id="layoutError_footer">
                {{> footer}}
            </div>
        </div>

        {{> modal-projects}}
        {{> modal-cookie}}

        {{> scripts}}
    </body>
</html>
